<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_background"
    tools:context="com.example.josejoescobar.medlinenetwork2.Escoger">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/infoescoger"
                android:layout_width="match_parent"
                android:layout_height="114dp"
                android:padding="10dp"
                android:gravity="center"
                android:text="EN ESTA OPCION PODRA BUSCAR Y ELEGIR UN PACIENTE, ESTO LE PERMITIRA VER SU HISTORIAL DE MEDCINAS, CITAS, ANTIGUOS DOCTORES, ETC...."
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="0.11" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:background="@android:drawable/menuitem_background"
                android:onClick="Regresar"
                app:srcCompat="@mipmap/salir" />
        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
